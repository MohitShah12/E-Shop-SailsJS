<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="ps-5 container-fluid">
        <a class="navbar-brand <%= path === '/' ? 'active' : '' %>" href="/">E-Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link <%= path === '/products' ? 'active' : '' %>" aria-current="page" href="/products">Products</a>
            </li>
            <% if (isAuthenticated) { %>
              <li class="nav-item">
                <a class="nav-link <%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
              </li>
                <% if(isAdmin) {%>
                  <li class="nav-item">
                    <a
                    class="nav-link <%= path === '/admin/add-product' ? 'active' : '' %>"
                    href="/admin/add-product"
                    >Add Product
                  </a>
                </li>
              <%}%> <% } %>
          </ul>
    
          <form class="d-flex mx-5">
            <input class="form-control me-2" type="text" name="search" placeholder="search by name of product or category..." style="width: 400px;">
            <input class="btn btn-outline-light" type="submit" value="Search">
          </form>
    
          <div class="d-flex">
            <% if (!isAuthenticated){ %> 
              <a class="btn btn-sm btn-outline-light m-2" href="/login" role="button">Login</a>
              <a class="btn btn-sm btn-outline-light m-2" href="/signup" role="button">Signup</a>
            <%} else { %>
              <form action="/logout" method="post">
                <button class="btn btn-sm btn-outline-light mx-2" type="submit">Logout</button>
              </form>
            <%} %>
            </div>
        </div>
      </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
